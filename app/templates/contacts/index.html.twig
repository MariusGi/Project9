{% extends 'base.html.twig' %}

{% block title %}Contacts{% endblock %}

{% block body %}
    <h1>Contact index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Phone</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.name }}</td>
                <td>{{ contact.phone }}</td>
                <td>
                    <a href="{{ path('contact_show', {'id': contact.id}) }}">show</a>
                    <a href="{{ path('contact_edit', {'id': contact.id}) }}">edit</a>
                </td>
            </tr>
        {% endfor %}

        {% for shared_contact in shared_contacts %}
            <tr>
                <td>{{ shared_contact.name }}</td>
                <td>{{ shared_contact.phone }}</td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

    <a href="{{ path('contact_new') }}">Create new</a>
    <a href="{{ path('shared_contacts') }}">View shared contacts</a>
{% endblock %}
